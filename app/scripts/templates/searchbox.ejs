<div id="ui-search">
	<form role="search">
		<div class="panel panel-search shadow">
			<div class="form-group">
				<label for="searchbox" class="sr-only"><%= placeholder %></label>
				<input id="searchbox" type="text" placeholder="<%= placeholder %>" class="form-control" autocomplete="off" disabled/>
			</div>
			<button class="btn btn-default search" type="submit">
				<span class="search"></span>
				<span class="sr-only">Search</span> 
			</button>
			<!--<a class="btn btn-default full" href="#">Full</a>-->
		</div>
	</form>
</div>