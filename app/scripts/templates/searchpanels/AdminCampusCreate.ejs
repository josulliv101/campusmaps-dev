<div class="shadow panel admin">
	<div class="navbar">Create a campus</div>
	<div class="bd spacing">
		<h3>Admin: New Campus</h3>
		<form class="form-horizontal" role="form">
		  <div class="form-group">
		    <label for="inputId" class="col-sm-4 control-label">Campus Id</label>
		    <div class="col-sm-8">
		      <input class="form-control" id="inputId" placeholder="Campus Id" value="${data.campusid}">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputName" class="col-sm-4 control-label">Name</label>
		    <div class="col-sm-8">
		      <input class="form-control" id="inputName" placeholder="Campus Name" value="${data.name}">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputLatLng" class="col-sm-4 control-label">LatLng</label>
		    <div class="col-sm-8">
		      <input class="form-control" id="inputLatLng" placeholder="Latitude/Longitude" value="${data.latlng}">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputZoom" class="col-sm-4 control-label">Zoom Level</label>
		    <div class="col-sm-8">
		      <input class="form-control" id="inputZoom" placeholder="Enter zoom or adjust it using map zoom" value="${data.zoom}">
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-8">
		      <button type="submit" class="btn btn-default btn-save">Save</button>
		    </div>
		  </div>
		</form>
	</div>
</div>